#include <iostream>
#include <math.h>
using namespace std;
void ceros(int a, intb, int c);
int main()
{
    ceros(5,2,1);
    return 0;
}
void ceros(int a, intb, int c)
{
    float x1,x2=0;
    float raiz=0;
    float discriminante=pow(b,2);
    discriminante=pow(b,2)-(4*a*c);
    if(discriminante<0)
    {
        discriminante=discriminante*-1;
        raiz=sqrt(discriminante);
        x1=(-b+raiz)/2*a;
        x2=(-b-raiz)/2*a;
        cout<<"La raices son= "<<x1<<"i y "<<x2<<"i"<<endl;
    }else{
        raiz=sqrt(discriminante);
        x1=(-b+raiz)/2*a;
        x2=(-b-raiz)/2*a;
        cout<<"La raices son= "<<x1<<" y "<<x2<<endl;
    }


}
